<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.tata_fragments">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/image1_t"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:src="@drawable/weight" />
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="体重:"/>
        <EditText
            android:id="@+id/edittext"
            android:layout_gravity="right"
            android:layout_width="170dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/image2_t"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="0dp"
            android:src="@drawable/mood" />

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="心情" />
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <Button
            android:id="@+id/button1_tata"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/happyer" />

        <Button

            android:id="@+id/button2_tata"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/more_happy" />

        <Button
            android:id="@+id/button3_tata"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/justso" />
        <Button
            android:id="@+id/button4_tata"
            android:background="@drawable/sad"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginTop="122dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">
        <ImageView
            android:id="@+id/image3_t"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:src="@drawable/habit" />
        <TextView
            android:layout_gravity="center_vertical"
            android:text="好习惯"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/edittext2_tata"
                android:layout_width="170dp"
                android:layout_height="wrap_content" />
     </LinearLayout>

   </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginTop="184dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ImageView
                android:id="@+id/image4_t"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:src="@drawable/majiaxian" />//e
            <TextView
                android:layout_gravity="center_vertical"
                android:text="马甲线"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/editt3_tata"
                android:layout_width="170dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginTop="246dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <ImageView
                android:id="@+id/image5_t"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:src="@drawable/remember" />
            <TextView
                android:layout_gravity="center_vertical"
                android:text="记事本"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/edittext1_tata"
                android:layout_width="170dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </android.support.v7.widget.CardView>
    <Button
        android:layout_marginTop="200dp"
        android:layout_gravity="center"
        android:background="@drawable/heart"
        android:id="@+id/button11_tata"
        android:layout_width="80dp"
        android:layout_height="50dp" />

</FrameLayout>
